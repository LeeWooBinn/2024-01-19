package ex02;

import java.util.Scanner;

public class Scanner01 {

	public static void main(String[] args) {
		
		
		Scanner input = new Scanner(System.in);      /* 오른쪽에 있는걸 왼쪽에 참조하겠다.*/
		
		System.out.println("당신의 나이는 : ");
		int age = input.nextInt();
		
		System.out.println("당신의 이름을 입력하세여요 : ");
		input.nextLine();   /* ? */
		String name = input.nextLine();
		
		
		System.out.println("이름은 " + name + " 나이는 " + age + "입니다. ");
		
		Scanner sc = new Scanner(System.in);  
		
		System.out.println("JavaBook : ");
		String JavaBook = input.nextLine();
		System.out.println(JavaBook);
		
		Scanner ss = new Scanner(System.in);
		System.out.println("문자열 입력 : ");
		String msg = ss.nextLine();
		
		System.out.println("출력 결과 : " + msg);

		
		Scanner s1 = new Scanner(System.in);
		
		int a = 20;
		int b = 30;
		System.out.println(a + b);
		System.out.println((a+b) / 2.0);
		
		Scanner s2 = new Scanner(System.in);
		
		int 숫자1 = 20;
		int 숫자2 = 30;
		
		System.out.println("숫자 : ");
		int u1 = s2.nextInt();
		System.out.println("숫자 : ");
		int u2 = s2.nextInt();
		
		System.out.println("합계 : " +(u1+u2));
		System.out.println("합계 : " +(u1+u2)/2.0);
		
		

		
		1
		
	}

}
